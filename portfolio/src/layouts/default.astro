---
import Head from "../components/layout/head.astro";
import Navbar from "../components/layout/navbar.astro";
import Footer from "../components/layout/footer.astro";

const { navbar_title = "" } = Astro.props;
const { tab_title = "" } = Astro.props;
---

<html>
  <head>
    <Head tab_title={tab_title} />
  </head>

  <body>
    <style>
      body {
        margin: 0;
      }
    </style>
    <Navbar navbar_title={navbar_title} />

    <!--Slot act as the placeholder for content wrapped in the default component -->
    <slot />
    <Footer />
  </body>
</html>
